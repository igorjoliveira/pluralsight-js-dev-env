{
    "name": "javascript-development-environment",
    "version": "1.0.0",
    "description": "Javascript development environment pluralsight couse by Cory House",
    "scripts": {
        "prestart": "babel-node buildScripts/message.js",
        "start": "npm-run-all --parallel security-check open:src lint:watch test:watch start-mockapi",
        "security-check": "nsp check",
        "localtunnel": "lt --port 3000",
        "open:src": "babel-node buildScripts/srcServer.js",
        "lint": "esw webpack.config.* src buildScripts --color",
        "lint:watch": "npm run lint -- --watch",
        "share": "npm-run-all --parallel open:src localtunnel",
        "test": "mocha --reporter progress buildScripts/testSetup.js \"src/**/*.test.js\"",
        "test:watch": "npm run test -- --watch",
        "generate-mock-data": "babel-node buildScripts/generateMockData",
        "prestart-mockapi": "npm run generate-mock-data",
        "start-mockapi": "json-server --watch -r src/api/routes.json src/api/db.json -p 3001",
        "clean-dist": "rimraf ./dist && mkdir dist",
        "prebuild": "npm-run-all clean-dist test lint",
        "build": "babel-node buildScripts/build.js",
        "postbuild": "babel-node buildScripts/distServer.js"
    },
    "author": "Cory House",
    "dependencies": {},
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.2",
        "babel-preset-latest": "^6.24.1",
        "babel-register": "^6.26.0",
        "chai": "^4.1.2",
        "chalk": "^2.3.0",
        "cheerio": "^1.0.0-rc.2",
        "cross-env": "^5.1.3",
        "css-loader": "^0.28.9",
        "eslint": "^4.16.0",
        "eslint-plugin-angular": "^3.2.0",
        "eslint-plugin-import": "^2.8.0",
        "eslint-plugin-react": "^7.6.1",
        "eslint-watch": "^3.1.3",
        "express": "^4.16.2",
        "faker": "^4.1.0",
        "html-webpack-plugin": "^2.30.1",
        "jsdom": "^11.6.2",
        "json-schema-faker": "^0.5.0-rc13",
        "json-server": "^0.12.1",
        "localtunnel": "^1.8.3",
        "mocha": "^5.0.0",
        "nock": "^9.1.6",
        "npm-run-all": "^4.1.2",
        "nsp": "^3.1.0",
        "numeral": "^2.0.6",
        "open": "^0.0.5",
        "rimraf": "^2.6.2",
        "style-loader": "^0.20.1",
        "webpack": "^3.10.0",
        "webpack-dev-middleware": "^2.0.4",
        "webpack-hot-middleware": "^2.21.0",
        "webpack-loader": "^0.0.1",
        "webpack-md5-hash": "^0.0.6",
        "extract-text-webpack-plugin": "^3.0.2",
        "html-loader": "^0.5.5",
        "file-loader": "^1.1.10"
    }
}
